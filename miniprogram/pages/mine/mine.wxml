<!--pages/mine/mine.wxml-->
<page-wrapper bind:loginready="onLoginReady">
    <view class="container">
        <image class="head-image" src="{{avatarUrl}}"></image>
        <view class="menu-container">
            <mp-cells>
                <mp-cell value="我的二维码" link="{true}">
                    <image class="cell-icon" slot="icon" src="./asset/qrcode.png"></image>
                </mp-cell>
                <mp-cell value="我的设备" link="{true}">
                    <image class="cell-icon" slot="icon" src="./asset/device.png"></image>
                </mp-cell>
                <mp-cell value="设置" link="{true}">
                    <image class="cell-icon" slot="icon" src="./asset/setting.png"></image>
                </mp-cell>
                <mp-cell value="帮助与反馈" link="{true}">
                    <image class="cell-icon" slot="icon" src="./asset/help.png"></image>
                </mp-cell>
            </mp-cells>
        </view>
    </view>
</page-wrapper>
