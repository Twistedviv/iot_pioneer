.container {
  padding: 50rpx 50rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.page-title {
  color: #000;
  font-size: 54rpx;
  font-weight: 500;
  align-self: flex-start;
  width: 100%;
  position: relative;
}
.weather{
  display: flex;
  align-items: center;
  line-height: 38rpx;
  margin-top: 16rpx;
}
.weather > text {
  margin-left: 18rpx;
}
.weather > text text {
  margin-right: 12rpx;
  font-size: 38rpx;
}
.page-title-weather-image{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.page-main {
  width: 100%;
  margin-top: 32px;
}
.page-main-title {
  font-size: 38rpx;
  font-weight: 500;
}
.seperator {
  width: 100%;
  height: 1px;
  background-color: #f0f0f0;
  margin: 10rpx 0 20rpx;
}
.empty-device-list {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-top: 240rpx;
}

.empty-device-list-desc {
  font-size: 40rpx;
  line-height: 2;
  text-align: center;
  margin-bottom: 10px;
}

.device-item {
  width: 300rpx;
  position: relative;
  margin-bottom: 20rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  border: 1rpx solid #DDD;
  box-sizing: border-box;
}

.device-item .item-content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: relative;
  height: 160rpx;
  box-sizing: border-box;
  padding: 12rpx 20rpx 8rpx;
  
}
.device-item .item-content .item-footer{
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.device-item .item-content .item-logo {
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
}
.device-item .item-content .item-switch {
  width: 60rpx;
}

.device-item .item-content .item-logo .item-logo-image {
  width: 100%;
  height: 100%;
}

.device-item .item-content .item-body {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.device-item .item-content .item-body .item-name {
  font-weight: 500;
  color: #444444;
  font-size: 24rpx;
}

.item-status.status-offline {
  background-color: #666;
}

.item-status.status-online {
  background-color: #29cc85;
}

.item-status {
  box-sizing: border-box;
  color: #fff;
  padding: 0 8rpx;
  font-size: 16rpx;
  height: 28rpx;
  font-weight: normal;
  border-radius: 8rpx;
  line-height: 28rpx;
}

view.float-add-device-btn {
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  box-shadow: 0 4rpx 10rpx 0 rgba(0, 0, 0, 0.30);
  top: -14rpx;
  right: 0;
  border-radius: 100rpx;
  overflow: hidden;
  z-index: 20;
}

.float-add-device-btn-icon {
  width: 37rpx;
  height: 37rpx;
}

.device-list {
  margin-bottom: 24px;
}

.share-device-list-title {
  line-height: 1.5;
  font-size: 28rpx;
  color: #444444;
  margin-bottom: 8px;
}

.debug-userid {
  font-size: 24rpx;
  color: #999;
  margin-top: 180rpx;
  text-align: center;
}
