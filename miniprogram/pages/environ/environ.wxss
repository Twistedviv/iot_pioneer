/* pages/env.wxss */
.container {
    padding: 50rpx 50rpx 0;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}
.title-box {
    display: flex;
    flex-direction: row;
}
.title{
   font-size: 54rpx; 
   font-weight: 500;
}
.seperator {
    width: 100%;
    height: 1px;
    background-color: #f0f0f0;
    margin: 10rpx 0 30rpx;
}

.top-tip {
	display: flex;
	flex-direction: row;
	align-items: center;
	padding: 20rpx 30rpx;
	margin-left: 10rpx;
	border-radius: 8rpx;
	box-shadow: #FFFFFF 10%;
}
.tip-icon {
	width: 32rpx;
	height: 32rpx;
	margin-right: 18rpx;
}
.tip-text {
	font-size: 28rpx;
	height: 32rpx;
	line-height: 32rpx;
	font-weight: 400;
}


.item-content {
    height: 200rpx;
    border-radius: 20rpx;
    border: #CCCCCC 1px solid;
    padding: 30rpx;
    box-sizing: border-box;
    margin-bottom: 32rpx;
}
.item-body {
    height: 100%;
    display: flex;
}
.item-icon {
    width: 140rpx;
    height: 140rpx;
}
.item-info {
    padding: 10rpx 0 20rpx 40rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.info-data {
    font-size: 34rpx;
}
.info-tip {
    font-size: 24rpx;
}
.over {
    color: #FF0000;
}
.normal {
    color: #19aa19;
}
.low {
    color: #0caada;
}